<Window x:Class="Contact_Registry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contact_Registry"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="525" Background="White">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="23" Margin="227,94,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="227,138,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <Button x:Name="bLogin" Content="Login" HorizontalAlignment="Left" Margin="126,232,0,0" VerticalAlignment="Top" Width="75" Click="bLogin_Click" IsDefault="True"/>
        <TextBlock x:Name="tUserName" HorizontalAlignment="Left" Margin="126,101,0,0" TextWrapping="Wrap" Text="UserName: " VerticalAlignment="Top"/>
        <TextBlock x:Name="tPassword" HorizontalAlignment="Left" Margin="126,138,0,0" TextWrapping="Wrap" Text="Password: " VerticalAlignment="Top"/>
        <Button x:Name="bExit" Content="Exit" HorizontalAlignment="Left" Margin="234,232,0,0" VerticalAlignment="Top" Width="75" Click="bExit_Click" IsCancel="True" />
    </Grid>
</Window>
